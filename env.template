# ===================================
# CONFIGURACIÓN DE VARIABLES DE ENTORNO
# ===================================
# Copia este archivo como .env y configura tus valores

# ===================================
# CONFIGURACIÓN DE APIS
# ===================================

# Binance API (requerido para trading)
BINANCE_API_KEY=tu_binance_api_key_aqui
BINANCE_API_SECRET=tu_binance_api_secret_aqui

# News API (opcional - para análisis de sentimientos)
NEWS_API_KEY=tu_news_api_key_aqui

# Alpha Vantage (opcional - datos macro)
ALPHA_VANTAGE_KEY=tu_alpha_vantage_key_aqui

# FRED API (opcional - datos económicos)
FRED_API_KEY=tu_fred_api_key_aqui

# CoinMetrics API (opcional - métricas on-chain)
COINMETRICS_KEY=tu_coinmetrics_key_aqui

# ===================================
# CONFIGURACIÓN DE SISTEMA
# ===================================

# Nivel de logging (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Habilitar cache
CACHE_ENABLED=true

# Procesamiento paralelo
PARALLEL_PROCESSING=true

# Número máximo de workers
MAX_WORKERS=4

# Timeout para requests (segundos)
REQUEST_TIMEOUT=30

# ===================================
# CONFIGURACIÓN DE BASE DE DATOS
# ===================================

# URL de la base de datos
DATABASE_URL=postgresql://trading_user:secure_password@localhost:5432/crypto_trading

# Pool de conexiones
DB_POOL_SIZE=5

# Timeout de conexión
DB_TIMEOUT=30

# ===================================
# CONFIGURACIÓN DE CACHE (REDIS)
# ===================================

# URL de Redis
REDIS_URL=redis://localhost:6379/0

# TTL por defecto (segundos)
CACHE_TTL=3600

# ===================================
# CONFIGURACIÓN DE TRADING
# ===================================

# Capital inicial para backtesting
INITIAL_CAPITAL=100000

# Comisión por operación (%)
COMMISSION_RATE=0.001

# Slippage estimado (%)
SLIPPAGE_RATE=0.0005

# Máximo riesgo por posición (%)
MAX_POSITION_RISK=0.02

# Máximo riesgo del portfolio (%)
MAX_PORTFOLIO_RISK=0.10

# Umbral mínimo de confianza
MIN_CONFIDENCE_THRESHOLD=0.70

# ===================================
# CONFIGURACIÓN DE MACHINE LEARNING
# ===================================

# Épocas para entrenamiento LSTM
LSTM_EPOCHS=100

# Batch size para LSTM
LSTM_BATCH_SIZE=32

# Número de folds para validación cruzada
CV_FOLDS=5

# Tamaño del conjunto de prueba
TEST_SIZE=0.2

# Early stopping patience
EARLY_STOPPING_PATIENCE=15

# ===================================
# CONFIGURACIÓN DE MONITOREO
# ===================================

# Habilitar métricas
METRICS_ENABLED=true

# Puerto para métricas
METRICS_PORT=9090

# Intervalo de health check (segundos)
HEALTH_CHECK_INTERVAL=30

# ===================================
# CONFIGURACIÓN DE ALERTAS
# ===================================

# Email para alertas
ALERT_EMAIL=tu_email@ejemplo.com

# Webhook de Slack (opcional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/tu/webhook/url

# Token de Telegram (opcional)
TELEGRAM_BOT_TOKEN=tu_telegram_bot_token
TELEGRAM_CHAT_ID=tu_chat_id

# ===================================
# CONFIGURACIÓN DE SEGURIDAD
# ===================================

# Clave secreta para encriptación
SECRET_KEY=tu_clave_secreta_muy_segura_aqui

# Salt para hashing
SALT=tu_salt_aleatorio_aqui

# JWT Secret (para autenticación)
JWT_SECRET=tu_jwt_secret_aqui

# ===================================
# CONFIGURACIÓN DE ENTORNO
# ===================================

# Entorno de ejecución (development, staging, production)
ENVIRONMENT=development

# Habilitar modo debug
DEBUG=false

# Zona horaria
TIMEZONE=UTC

# ===================================
# CONFIGURACIÓN DE BACKUP
# ===================================

# Directorio para backups
BACKUP_DIR=./backups

# Retención de backups (días)
BACKUP_RETENTION_DAYS=30

# ===================================
# CONFIGURACIÓN DE PROXY (OPCIONAL)
# ===================================

# HTTP Proxy
HTTP_PROXY=

# HTTPS Proxy
HTTPS_PROXY=

# ===================================
# CONFIGURACIÓN DE RENDIMIENTO
# ===================================

# Memoria máxima para cache (MB)
MAX_CACHE_MEMORY=1024

# Número máximo de conexiones simultáneas
MAX_CONNECTIONS=100

# Timeout para operaciones (segundos)
OPERATION_TIMEOUT=300 